{
  "name": "@thiagomoraesn13/design-tokens",
  "version": "0.0.29",
  "private": false,
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./index.css": "./dist/index.css",
    "./themes/noverde/index.css": "./dist/themes/noverde/index.css",
    "./themes/noverde/colors.css": "./dist/themes/noverde/colors.css",
    "./themes/dotz/index.css": "./dist/themes/dotz/index.css",
    "./themes/dotz/colors.css": "./dist/themes/dotz/colors.css",
    "./tokens/*": "./dist/tokens/*",
    "./utilities.css": "./dist/utilities.css"
  },
  "scripts": {
    "build:utilities": "node scripts/gen-utilities.mjs",
    "build": "vite build && tsc -p tsconfig.tokens.json && yarn build:utilities",
    "prepublishOnly": "yarn build",
    "publish:pkg": "npm publish"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "vite": "^7.3.1",
    "typescript": "^5.9.3",
    "vite-plugin-static-copy": "^1.0.6"
  }
}
